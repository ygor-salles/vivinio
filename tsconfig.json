{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6"],
    "outDir": "build",
    "rootDir": "./",
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "module": "commonjs",                                
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": false,                                     
    "strictPropertyInitialization": false,             
    "skipLibCheck": true                                 
  }
}
