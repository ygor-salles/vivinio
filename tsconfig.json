{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",                                
    "lib": ["es6"],
    "outDir": "build",
    "rootDir": "src",
    "strict": false,                                     
    "strictPropertyInitialization": false,             
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "esModuleInterop": true,                             
    "skipLibCheck": true,                                 
    "forceConsistentCasingInFileNames": true,            
  }
}
